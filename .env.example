# Application
APP_NAME="FastAPI Call Center"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/callcenter
# For async: postgresql+asyncpg://postgres:password@localhost:5432/callcenter
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=True

# HumeAI Configuration
HUME_API_KEY=your-hume-api-key-here
HUME_CONFIG_ID=your-hume-config-id
HUME_SECRET_KEY=your-hume-secret-key
HUME_WEBSOCKET_URL=wss://api.hume.ai/v0/assistant/chat

# Dialer - Twilio (Primary)
DIALER_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VOICE_URL=https://your-domain.com/api/voice/webhook

# Dialer - Vonage (Alternative)
VONAGE_API_KEY=your-vonage-api-key
VONAGE_API_SECRET=your-vonage-api-secret
VONAGE_NUMBER=1234567890
VONAGE_APPLICATION_ID=your-app-id

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024
AUDIO_CHANNELS=1
AUDIO_FORMAT=LINEAR16

# Call Configuration
MAX_CALL_DURATION_SECONDS=1800
SILENCE_THRESHOLD_SECONDS=3
INTERRUPT_DETECTION_ENABLED=True
CALL_RECORDING_ENABLED=True

# Scheduling
SCHEDULER_TIMEZONE=Asia/Karachi
SCHEDULER_WORK_HOURS_START=09:00
SCHEDULER_WORK_HOURS_END=18:00

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# Celery (Optional - for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Performance
WORKERS=4
MAX_CONCURRENT_CALLS=100
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10

# Feature Flags
ENABLE_CALL_RECORDING=True
ENABLE_REAL_TIME_ANALYTICS=True
ENABLE_AUTO_SCHEDULING=True
ENABLE_SENTIMENT_ANALYSIS=True
